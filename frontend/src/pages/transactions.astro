const transactions = [
  {
    id: 1,
    description: "Supermercado Dia",
    category: "Comida",
    date: "2023-11-20",
    amount: "-$85.50",
    isExpense: true
  },
  {
    id: 2,
    description: "Transferencia recibida",
    category: "Ingresos",
    date: "2023-11-18",
    amount: "+$750.00",
    isExpense: false
  },
  {
    id: 3,
    description: "Netflix",
    category: "Entretenimiento",
    date: "2023-11-15",
    amount: "-$15.99",
    isExpense: true
  },
  {
    id: 4,
    description: "Gasolina",
    category: "Transporte",
    date: "2023-11-14",
    amount: "-$45.00",
    isExpense: true
  },
  {
    id: 5,
    description: "Salario",
    category: "Ingresos",
    date: "2023-11-10",
    amount: "+$2,100.00",
    isExpense: false
  },
  // Más transacciones para tener una lista completa
  {
    id: 6,
    description: "Restaurante",
    category: "Comida",
    date: "2023-11-08",
    amount: "-$32.75",
    isExpense: true
  },
  {
    id: 7,
    description: "Amazon",
    category: "Compras",
    date: "2023-11-05",
    amount: "-$49.99",
    isExpense: true
  },
  {
    id: 8,
    description: "Factura de luz",
    category: "Vivienda",
    date: "2023-11-03",
    amount: "-$85.20",
    isExpense: true
  },
  {
    id: 9,
    description: "Ingreso freelance",
    category: "Ingresos",
    date: "2023-11-02",
    amount: "+$350.00",
    isExpense: false
  },
  {
    id: 10,
    description: "Factura de internet",
    category: "Vivienda",
    date: "2023-11-01",
    amount: "-$45.99",
    isExpense: true
  }
