  {
    id: 1,
    description: "Supermercado Dia",
    category: "Comida",
    date: "2023-11-20",
    amount: "-$85.50",
    isExpense: true
  },
  {
    id: 2,
    description: "Transferencia recibida",
    category: "Ingresos",
    date: "2023-11-18",
    amount: "+$750.00",
    isExpense: false
  },
  {
    id: 3,
    description: "Netflix",
    category: "Entretenimiento",
    date: "2023-11-15",
    amount: "-$15.99",
    isExpense: true
  },
  {
    id: 4,
    description: "Gasolina",
    category: "Transporte",
    date: "2023-11-14",
    amount: "-$45.00",
    isExpense: true
  },
  {
