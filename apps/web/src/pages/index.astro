---
import MainLayout from "../layouts/MainLayout.astro";
import LoginButton from "../components/auth/LoginButton.vue";
import UserMenu from "../components/auth/UserMenu.vue";
---

<MainLayout title="MoneyDiary - Tu gestor de finanzas personales">
  <main class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800">MoneyDiary</h1>
      <div data-vue-component>
        <!-- Usa client:only para que se renderice solo en el cliente -->
        <UserMenu client:only="vue" />
      </div>
    </div>

    <div class="bg-white p-8 rounded-lg shadow-md max-w-3xl mx-auto">
      <h2 class="text-2xl font-semibold text-gray-700 mb-4">Bienvenido a MoneyDiary</h2>
      <p class="text-gray-600 mb-6">
        Tu solución completa para gestionar tus finanzas personales.
      </p>
      
      <div data-vue-component>
        <!-- Usa client:only para LoginButton también -->
        <LoginButton client:only="vue" />
      </div>
    </div>
  </main>
</MainLayout>

<script>
  // Este script se ejecutará solo en el cliente
  import { createApp } from 'vue';
  import { pinia, initPinia } from '../stores/pinia';
  import { loadUserInfo } from '../services/authService';
  import { isAdmin } from '../utils/auth';

  document.addEventListener('DOMContentLoaded', async () => {
    // Inicializar Pinia
    initPinia();
    
    const { useAuthStore } = await import('../stores/authStore');
    const authStore = useAuthStore();
    
    // Si el usuario está autenticado pero no tenemos sus datos, cargarlos
    if (authStore.isAuthenticated && !authStore.user) {
      await loadUserInfo();
      
      // Si el usuario es administrador, mostrar un mensaje de bienvenida especial
      if (isAdmin()) {
        console.log("Bienvenido, Administrador!");
      }
    }
  });
</script>